<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/responseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Nothing to be seen yet."
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/hello"/>

    <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="No error."
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/responseText"/>

    <Button
        android:id="@+id/requestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Send request"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/errorText"/>


    <Button
        android:id="@+id/retrieveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Retrieve Test bundle"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/requestButton"/>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Update Test bundle"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/retrieveButton"/>


    <Button
        android:id="@+id/bundleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Bundles"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="@+id/updateButton"/>
        />

</android.support.constraint.ConstraintLayout>